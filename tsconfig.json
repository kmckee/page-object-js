{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!**/node_modules/**",
        "!node_modules/**",
        "!**/dist/**",
        "!tmp/**"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "files": [
        "src/browser.ts",
        "src/builderFactory.spec.ts",
        "src/BuilderFactory.ts",
        "src/button.ts",
        "src/index.ts",
        "src/page.ts",
        "src/person.spec.ts",
        "src/person.ts",
        "src/span.ts",
        "testProject/features/pages/SignupFormPage.ts",
        "testProject/features/step-definitions/steps.ts",
        "testProject/features/support/hooks.ts",
        "testProject/features/support/world.ts",
        "testProject/typings/browser.d.ts",
        "testProject/typings/browser/ambient/chai/chai.d.ts",
        "testProject/typings/browser/ambient/selenium-webdriver/selenium-webdriver.d.ts",
        "testProject/typings/main.d.ts",
        "testProject/typings/main/ambient/chai/chai.d.ts",
        "testProject/typings/main/ambient/selenium-webdriver/selenium-webdriver.d.ts",
        "typings/browser.d.ts",
        "typings/browser/ambient/node/node.d.ts",
        "typings/browser/ambient/selenium-webdriver/selenium-webdriver.d.ts",
        "typings/browser/ambient/tape/tape.d.ts",
        "typings/browser/definitions/es6-promise/es6-promise.d.ts",
        "typings/main.d.ts",
        "typings/main/ambient/node/node.d.ts",
        "typings/main/ambient/selenium-webdriver/selenium-webdriver.d.ts",
        "typings/main/ambient/tape/tape.d.ts",
        "typings/main/definitions/es6-promise/es6-promise.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
